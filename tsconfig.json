{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": ["./src/**/*", "decs.d.ts"],
  "exclude": ["webpack.common.js", "webpack.dev.js", "webpack.prod.js"]
}
